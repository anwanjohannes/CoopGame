test_that("Check 07.2 - banzahfValue4Vector parameter check valid game Vector A",{
  if(boolSkip){
    skip("Test was skipped")
  }
  #look at example https://de.wikipedia.org/wiki/Machtindex#cite_note-Banzhaf65-3
  
  #N=c(1,2,3), w=(50,49,1), q=1
  A1=generateGameVector(cFuncQuota, w=c(50,49,1),n=3,q=1)
  bv1=banzhafIndex4Vector(A1)$banzhafIndex
  expect_equal(bv1,c(1/3,1/3,1/3))
  
  #N=c(1,2,3), w=(50,49,1), q=51
  A51=generateGameVector(cFuncQuota, w=c(50,49,1),n=3,q=51)
  bv51=banzhafIndex4Vector(A51)$banzhafIndex
  expect_equal(bv51,c(3/5,1/5,1/5))
  
  #N=c(1,2,3), w=(50,49,1), q=52
  A52=generateGameVector(cFuncQuota, w=c(50,49,1),n=3,q=52)
  bv52=banzhafIndex4Vector(A52)$banzhafIndex
  expect_equal(bv52,c(1/2,1/2,0.0))
  
  #N=c(1,2,3), w=(50,49,1), q=100
  A100=generateGameVector(cFuncQuota, w=c(50,49,1),n=3,q=100)
  bv100=banzhafIndex4Vector(A100)$banzhafIndex
  expect_equal(bv100,c(1/3,1/3,1/3))
  
})


