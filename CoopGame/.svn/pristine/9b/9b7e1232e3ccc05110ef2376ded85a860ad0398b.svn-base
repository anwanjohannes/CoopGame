boolSkip=F

test_that("Check 77.1 - selectope3Vertices - 3 players",{
  if(boolSkip){
    skip("Test was skipped")
  }
  A <- c(2, 4, 5, 18, 24, 9, 24)
  V1 <- c(31, -12, 5)
  V2 <- c(14, -12, 22)
  V3 <- c(-14, 16, 22)
  V4 <- c(19, 16, -11)
  V5 <- c(31, 4, -11)
  result = selectope3Vertices(A)
  expect_equal(result[1, ], V1)
  expect_equal(result[2, ], V2)
  expect_equal(result[3, ], V3)
  expect_equal(result[4, ], V4)
  expect_equal(result[5, ], V5)
})

