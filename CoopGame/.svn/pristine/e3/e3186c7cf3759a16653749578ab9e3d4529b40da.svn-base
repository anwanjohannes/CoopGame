boolSkip=T

test_that("Check 23.1 - isConvexGame test: Example on Harald Wiese 2005 p. 372 I.3.6 (both convex and non-convex - when graph is taken into consideration) ",{
  # v(S)=|S|-1, S!={}
  A=generateGameVector(cFuncCardinality,n = 4)
  A=A-1

  expect_equal(isConvexGame(A)$isConvexGame,TRUE)
  #G={12,23,34,41} non convex in consequence
  AG=c(0, 0, 0, 0, 1, 0, 1, 1, 0, 1, 2, 2, 2, 2, 3)
  expect_equal(isConvexGame(AG)$isConvexGame,FALSE)
})


test_that("Check 23.2 - isConvexGame: example of nonconvex game",{
  A=c(1, 0,1, 0,1,1, 0)

  expect_equal(isConvexGame(A)$isConvexGame,FALSE)

  AG=c(0, 0, 0, 0, 1, 0, 1, 1, 0, 1, 2, 2, 2, 2, 3)
  expect_equal(isConvexGame(AG)$isConvexGame,FALSE)
})




test_that("Check 23.3 - isConvexGame: example of convex game",{
  A=c(0,0,0,1,2,1,4)

  expect_equal(isConvexGame(A)$isConvexGame,TRUE)
})
